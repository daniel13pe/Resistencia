                android:onClick="neg3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/black"/>
            <Button
                android:id="@+id/c3"
                android:onClick="c3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/saddlebrown"/>
            <Button
                android:id="@+id/r3"
                android:onClick="r3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/red"/>
            <Button
                android:id="@+id/n3"
                android:onClick="n3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/darkorange"/>
            <Button
                android:id="@+id/am3"
                android:onClick="am3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/yellow"/>
            <Button
                android:id="@+id/v3"
                android:onClick="v3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/limegreen"/>
            <Button
                android:id="@+id/az3"
                android:onClick="az3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/blue"/>
            <Button
                android:id="@+id/p3"
                android:onClick="p3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/purple"/>
            <Button
                android:id="@+id/g3"
                android:onClick="g3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/gray"/>
            <Button
                android:id="@+id/b3"
                android:onClick="b3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:id="@+id/gold3"
                android:onClick="gold3press"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/darkgoldenrod"/>
